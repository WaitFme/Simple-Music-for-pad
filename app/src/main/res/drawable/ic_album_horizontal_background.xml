<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="250dp"
                android:height="250dp" />
            <solid android:color="#191919"/>

            <padding
                android:bottom="70dp"
                android:left="70dp"
                android:right="70dp"
                android:top="70dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white"/>
            <stroke
                android:width="20dp"/>
        </shape>
    </item>
</layer-list>