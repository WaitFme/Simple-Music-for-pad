<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="270dp"
                android:height="270dp" />
            <solid android:color="#191919"/>

            <padding
                android:bottom="60dp"
                android:left="60dp"
                android:right="60dp"
                android:top="60dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white"/>
            <stroke
                android:width="15dp"/>
        </shape>
    </item>
</layer-list>